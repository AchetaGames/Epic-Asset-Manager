<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="EpicLoggedInBox" parent="GtkBox">
        <property name="hexpand">1</property>
        <property name="vexpand">1</property>
        <property name="orientation">horizontal</property>

        <!-- SIDEBAR (left side) -->
        <child>
            <object class="EpicSidebar" id="sidebar"/>
        </child>

        <!-- MAIN CONTENT AREA â€” one page per section -->
        <child>
            <object class="GtkStack" id="page_stack">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="transition-type">crossfade</property>

                <!-- ENGINES PAGE -->
                <child>
                    <object class="GtkStackPage">
                        <property name="name">engines</property>
                        <property name="child">
                            <object class="EpicEnginesBox" id="engines"/>
                        </property>
                    </object>
                </child>

                <!-- PROJECTS PAGE -->
                <child>
                    <object class="GtkStackPage">
                        <property name="name">projects</property>
                        <property name="child">
                            <object class="EpicProjectsBox" id="projects"/>
                        </property>
                    </object>
                </child>

                <!-- ASSET LIBRARY PAGE -->
                <child>
                    <object class="GtkStackPage">
                        <property name="name">library</property>
                        <property name="child">
                            <object class="EpicLibraryBox" id="library"/>
                        </property>
                    </object>
                </child>

                <!-- FAB LIBRARY PAGE -->
                <child>
                    <object class="GtkStackPage">
                        <property name="name">fab</property>
                        <property name="child">
                            <object class="FabLibraryBox" id="fab"/>
                        </property>
                    </object>
                </child>

                <!-- GAMES PAGE -->
                <child>
                    <object class="GtkStackPage">
                        <property name="name">games</property>
                        <property name="child">
                            <object class="EpicGamesBox" id="games"/>
                        </property>
                    </object>
                </child>

            </object>
        </child>

        <!-- ASSET DETAILS PANEL (right side, hidden by default) -->
        <child>
            <object class="EpicAssetDetails" id="details">
                <property name="visible">false</property>
            </object>
        </child>
    </template>
</interface>
