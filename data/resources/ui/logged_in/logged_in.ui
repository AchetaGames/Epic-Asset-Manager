<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="EpicLoggedInBox" parent="GtkBox">
        <property name="hexpand">1</property>
        <property name="vexpand">1</property>
        <property name="orientation">horizontal</property>

        <!-- PAGE-LEVEL SIDEBAR (left side, outside scroll) -->
        <child>
            <object class="EpicSidebar" id="sidebar"/>
        </child>

        <!-- MAIN CONTENT AREA with page stack -->
        <child>
            <object class="GtkStack" id="page_stack">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="transition-type">crossfade</property>

                <!-- UNREAL PAGE (engines, projects, library) -->
                <child>
                    <object class="GtkStackPage">
                        <property name="name">unreal</property>
                        <property name="child">
                            <object class="GtkBox" id="unreal_page">
                                <property name="orientation">vertical</property>
                                <property name="hexpand">true</property>
                                <property name="vexpand">true</property>
                                <child>
                                    <object class="GtkScrolledWindow" id="main_scroll">
                                        <property name="hexpand">true</property>
                                        <property name="vexpand">true</property>
                                        <property name="hscrollbar-policy">never</property>
                                        <property name="child">
                                            <object class="GtkBox" id="sections_box">
                                                <property name="orientation">vertical</property>
                                                <property name="hexpand">true</property>
                                                <property name="spacing">0</property>

                                                <!-- ENGINES SECTION -->
                                                <child>
                                                    <object class="GtkBox" id="engines_section">
                                                        <property name="orientation">vertical</property>
                                                        <property name="hexpand">true</property>
                                                        <property name="css-classes">section</property>
                                                        <child>
                                                            <object class="GtkBox" id="engines_header">
                                                                <property name="css-classes">section-header</property>
                                                                <property name="spacing">8</property>
                                                                <property name="margin-start">16</property>
                                                                <property name="margin-end">16</property>
                                                                <property name="margin-top">12</property>
                                                                <property name="margin-bottom">8</property>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label">ENGINE VERSIONS</property>
                                                                        <property name="css-classes">section-title</property>
                                                                        <property name="halign">start</property>
                                                                        <property name="hexpand">true</property>
                                                                    </object>
                                                                </child>
                                                            </object>
                                                        </child>
                                                        <child>
                                                            <object class="EpicEnginesBox" id="engines"/>
                                                        </child>
                                                    </object>
                                                </child>

                                                <!-- Separator -->
                                                <child>
                                                    <object class="GtkSeparator">
                                                        <property name="margin-top">8</property>
                                                        <property name="margin-bottom">8</property>
                                                        <property name="margin-start">16</property>
                                                        <property name="margin-end">16</property>
                                                    </object>
                                                </child>

                                                <!-- PROJECTS SECTION -->
                                                <child>
                                                    <object class="GtkBox" id="projects_section">
                                                        <property name="orientation">vertical</property>
                                                        <property name="hexpand">true</property>
                                                        <property name="css-classes">section</property>
                                                        <child>
                                                            <object class="GtkBox" id="projects_header">
                                                                <property name="css-classes">section-header</property>
                                                                <property name="spacing">8</property>
                                                                <property name="margin-start">16</property>
                                                                <property name="margin-end">16</property>
                                                                <property name="margin-top">12</property>
                                                                <property name="margin-bottom">8</property>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label">MY PROJECTS</property>
                                                                        <property name="css-classes">section-title</property>
                                                                        <property name="halign">start</property>
                                                                        <property name="hexpand">true</property>
                                                                    </object>
                                                                </child>
                                                            </object>
                                                        </child>
                                                        <child>
                                                            <object class="EpicProjectsBox" id="projects"/>
                                                        </child>
                                                    </object>
                                                </child>

                                                <!-- Separator -->
                                                <child>
                                                    <object class="GtkSeparator">
                                                        <property name="margin-top">8</property>
                                                        <property name="margin-bottom">8</property>
                                                        <property name="margin-start">16</property>
                                                        <property name="margin-end">16</property>
                                                    </object>
                                                </child>

                                                <!-- LIBRARY SECTION -->
                                                <child>
                                                    <object class="GtkBox" id="library_section">
                                                        <property name="orientation">vertical</property>
                                                        <property name="hexpand">true</property>
                                                        <property name="vexpand">true</property>
                                                        <property name="css-classes">section</property>
                                                        <child>
                                                            <object class="GtkBox" id="library_header">
                                                                <property name="css-classes">section-header</property>
                                                                <property name="spacing">8</property>
                                                                <property name="margin-start">16</property>
                                                                <property name="margin-end">16</property>
                                                                <property name="margin-top">12</property>
                                                                <property name="margin-bottom">8</property>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label">ASSET LIBRARY</property>
                                                                        <property name="css-classes">section-title</property>
                                                                        <property name="halign">start</property>
                                                                        <property name="hexpand">true</property>
                                                                    </object>
                                                                </child>
                                                            </object>
                                                        </child>
                                                        <child>
                                                            <object class="EpicLibraryBox" id="library">
                                                                <property name="vexpand">true</property>
                                                            </object>
                                                        </child>
                                                    </object>
                                                </child>

                                            </object>
                                        </property>
                                    </object>
                                </child>
                            </object>
                        </property>
                    </object>
                </child>

                <!-- GAMES PAGE -->
                <child>
                    <object class="GtkStackPage">
                        <property name="name">games</property>
                        <property name="child">
                            <object class="EpicGamesBox" id="games"/>
                        </property>
                    </object>
                </child>

            </object>
        </child>
    </template>
</interface>
