<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <template class="EpicGamesBox" parent="GtkBox">
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <property name="orientation">vertical</property>
        <property name="css-classes">view</property>

        <!-- Header -->
        <child>
            <object class="GtkBox" id="games_header">
                <property name="css-classes">section-header</property>
                <property name="spacing">8</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">8</property>
                <child>
                    <object class="GtkLabel">
                        <property name="label" translatable="yes">MY GAMES</property>
                        <property name="css-classes">section-title</property>
                        <property name="halign">start</property>
                        <property name="hexpand">true</property>
                    </object>
                </child>
                <child>
                    <object class="GtkSearchEntry" id="games_search">
                        <property name="placeholder-text" translatable="yes">Search games...</property>
                    </object>
                </child>
            </object>
        </child>

        <!-- Games Grid -->
        <child>
            <object class="GtkScrolledWindow" id="games_scroll">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="child">
                    <object class="GtkGridView" id="games_grid">
                        <property name="halign">fill</property>
                        <property name="valign">start</property>
                        <property name="max-columns">255</property>
                        <property name="margin-start">16</property>
                        <property name="margin-end">16</property>
                        <property name="margin-top">8</property>
                        <property name="margin-bottom">8</property>
                    </object>
                </property>
            </object>
        </child>
    </template>
</interface>
