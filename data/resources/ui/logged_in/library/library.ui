<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <template class="EpicLibraryBox" parent="GtkBox">
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <property name="orientation">vertical</property>

        <!-- Filter and sort toolbar -->
        <child>
            <object class="GtkBox">
                <property name="halign">fill</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <property name="margin-top">8</property>
                <property name="margin-bottom">8</property>
                <property name="spacing">8</property>
                <child>
                    <object class="GtkSearchEntry" id="asset_search">
                        <property name="width-request">200</property>
                        <property name="placeholder-text">Search</property>
                        <property name="hexpand">true</property>
                    </object>
                </child>
                <child>
                    <object class="GtkDropDown" id="category_dropdown">
                        <property name="tooltip-text" translatable="yes">Filter by category</property>
                    </object>
                </child>
                <child>
                    <object class="GtkBox">
                        <property name="css-classes">linked</property>
                        <child>
                            <object class="GtkToggleButton" id="downloaded_filter">
                                <property name="icon-name">folder-download-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Only show downloaded</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkToggleButton" id="favorites_filter">
                                <property name="icon-name">starred-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Only show starred</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkSeparator">
                        <property name="orientation">vertical</property>
                    </object>
                </child>
                <child>
                    <object class="GtkBox">
                        <property name="css-classes">linked</property>
                        <child>
                            <object class="GtkDropDown" id="select_order_by">
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton" id="order">
                                <property name="action-name">library.order</property>
                                <property name="icon-name">view-sort-ascending-symbolic</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>

        <!-- Grid area with scroll -->
        <child>
            <object class="GtkScrolledWindow">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="hscrollbar-policy">never</property>
                <property name="child">
                    <object class="GtkGridView" id="asset_grid">
                        <property name="halign">fill</property>
                        <property name="valign">start</property>
                        <property name="max-columns">255</property>
                        <property name="margin-start">16</property>
                        <property name="margin-end">16</property>
                        <property name="margin-top">8</property>
                        <property name="margin-bottom">8</property>
                    </object>
                </property>
            </object>
        </child>

        <!-- Progress bar and count -->
        <child>
            <object class="GtkBox">
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <property name="margin-bottom">6</property>
                <property name="spacing">8</property>
                <child>
                    <object class="GtkProgressBar" id="refresh_progress">
                        <property name="hexpand">true</property>
                        <property name="show-text">true</property>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="count_label">
                        <property name="css-classes">menu</property>
                        <property name="label" translatable="yes">0 items</property>
                        <property name="halign">end</property>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>
