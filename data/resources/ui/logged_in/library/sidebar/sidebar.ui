<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="EpicSidebar" parent="GtkBox">
        <property name="vexpand">true</property>
        <property name="hexpand-set">true</property>
        <child>
            <object class="GtkBox" id="navigation">
                <property name="orientation">vertical</property>
                <property name="hexpand">false</property>
                <child>
                    <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="name">main</property>
                        <property name="margin-top">6</property>
                        <property name="margin-start">5</property>
                        <property name="margin-end">4</property>
                        <property name="spacing">4</property>
                        <child>
                            <object class="EpicSidebarButton" id="engines_category">
                                <property name="icon-name">application-x-firmware-symbolic</property>
                                <property name="path">engines</property>
                                <property name="tooltip-text" translatable="yes">Engine Versions</property>
                            </object>
                        </child>
                        <child>
                            <object class="EpicSidebarButton" id="projects_category">
                                <property name="icon-name">folder-symbolic</property>
                                <property name="path">projects</property>
                                <property name="tooltip-text" translatable="yes">Projects</property>
                            </object>
                        </child>
                        <child>
                            <object class="EpicSidebarButton" id="library_category">
                                <property name="icon-name">view-grid-symbolic</property>
                                <property name="path">library</property>
                                <property name="tooltip-text" translatable="yes">Asset Library</property>
                            </object>
                        </child>
                        <child>
                            <object class="EpicSidebarButton" id="fab_category">
                                <property name="icon-name">emblem-shared-symbolic</property>
                                <property name="path">fab</property>
                                <property name="tooltip-text" translatable="yes">Fab Library</property>
                            </object>
                        </child>
                        <child>
                            <object class="EpicSidebarButton" id="games_category">
                                <property name="icon-name">input-gaming-symbolic</property>
                                <property name="filter">games|dlc</property>
                                <property name="path">games</property>
                                <property name="tooltip-text" translatable="yes">Games</property>
                            </object>
                        </child>
                    </object>
                </child>
                <!-- Marketplace button at bottom of nav strip -->
                <child>
                    <object class="GtkBox">
                        <property name="vexpand">true</property>
                        <property name="valign">end</property>
                        <property name="margin-start">5</property>
                        <property name="margin-end">4</property>
                        <property name="margin-bottom">6</property>
                        <child>
                            <object class="GtkButton" id="marketplace_button">
                                <property name="action-name">sidebar.marketplace</property>
                                <property name="halign">center</property>
                                <property name="valign">center</property>
                                <property name="tooltip-text" translatable="yes">Open Marketplace</property>
                                <child>
                                    <object class="GtkImage">
                                        <property name="icon-name">web-browser-symbolic</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkSeparator"/>
        </child>
    </template>
</interface>
