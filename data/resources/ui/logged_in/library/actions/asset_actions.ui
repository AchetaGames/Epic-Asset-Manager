<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="EpicAssetActions" parent="GtkBox">
        <child>
            <object class="AdwPreferencesPage">
                <child>
                    <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Details</property>
                        <child>
                            <object class="GtkListBox" id="additional_details">
                                <property name="selection-mode">GTK_SELECTION_NONE</property>
                                <property name="css-classes">boxed-list</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwPreferencesGroup" id="local_group">
                        <property name="title" translatable="yes">Local Files</property>
                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">Path:</property>
                                <child type="suffix">
                                    <object class="EpicLocalAssets" id="local_assets">
                                        <property name="valign">center</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Download</property>
                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">Version:</property>
                                <child>
                                    <object class="GtkDropDown" id="select_download_version">
                                        <property name="halign">center</property>
                                        <property name="valign">center</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">Target:</property>
                                <property name="title_lines">1</property>
                                <child>
                                    <object class="EpicDownloadDetails" id="download_details">
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwPreferencesGroup" id="project_group">
                        <property name="title" translatable="yes">Add to project</property>
                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">Target:</property>
                                <property name="title_lines">1</property>
                                <child>
                                    <object class="EpicAddToProject" id="add_to_project">
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwPreferencesGroup"  id="new_project_group">
                        <property name="title" translatable="yes">Create Project</property>
                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">Create a new Unreal project from this asset</property>
                                <property name="subtitle" translatable="yes">Configure project name, location, and engine version</property>
                                <property name="activatable">false</property>
                                <child type="suffix">
                                    <object class="GtkButton" id="open_create_project_dialog">
                                        <property name="valign">center</property>
                                        <child>
                                            <object class="AdwButtonContent">
                                                <property name="icon-name">document-new-symbolic</property>
                                                <property name="label" translatable="yes">Create Project...</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
                <!-- Keep old widget for backwards compatibility but hidden -->
                <child>
                    <object class="EpicCreateAssetProject" id="create_asset_project">
                        <property name="visible">false</property>
                    </object>
                </child>
                <child>
                    <object class="AdwPreferencesGroup"  id="engine_group">
                        <property name="title" translatable="yes">Add to Engine</property>
                        <child>
                            <object class="AdwExpanderRow">
                                <property name="title" translatable="yes">Add to Engine</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwPreferencesGroup" id="install_group">
                        <property name="title" translatable="yes">Install</property>
                        <child>
                            <object class="AdwExpanderRow">
                                <property name="title" translatable="yes">Install</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>
