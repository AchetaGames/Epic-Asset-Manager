<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="EpicAddToProjectDialog" parent="AdwWindow">
        <property name="title" translatable="yes">Add to Project</property>
        <property name="default-width">600</property>
        <property name="default-height">500</property>
        <property name="modal">true</property>
        <property name="resizable">true</property>
        <property name="content">
            <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                    <object class="AdwHeaderBar">
                        <property name="show-end-title-buttons">false</property>
                        <property name="show-start-title-buttons">false</property>
                        <child type="start">
                            <object class="GtkButton" id="cancel_button">
                                <property name="label" translatable="yes">Cancel</property>
                                <property name="action-name">window.close</property>
                            </object>
                        </child>
                        <child type="end">
                            <object class="GtkButton" id="add_button">
                                <property name="label" translatable="yes">Add to Project</property>
                                <property name="css-classes">suggested-action</property>
                                <property name="sensitive">false</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="margin-start">16</property>
                        <property name="margin-end">16</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">16</property>
                        <property name="spacing">12</property>
                        <child>
                            <object class="GtkLabel" id="asset_name_label">
                                <property name="css-classes">title-3</property>
                                <property name="halign">start</property>
                                <property name="label" translatable="yes">Select a project</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkScrolledWindow">
                                <property name="vexpand">true</property>
                                <property name="hscrollbar-policy">never</property>
                                <property name="child">
                                    <object class="GtkGridView" id="projects_grid">
                                        <property name="halign">fill</property>
                                        <property name="valign">start</property>
                                        <property name="max-columns">3</property>
                                        <property name="min-columns">2</property>
                                    </object>
                                </property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <child>
                                    <object class="GtkCheckButton" id="overwrite_check">
                                        <property name="label" translatable="yes">Overwrite existing files</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="AdwBanner" id="no_projects_bar">
                                <property name="revealed">false</property>
                                <property name="title" translatable="yes">No projects found. Add project directories in Settings or create a new project first.</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </property>
    </template>
</interface>
